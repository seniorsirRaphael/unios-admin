{
  "version": 2,
  "name": "unios-admin",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "s-maxage=31536000,immutable"
      }
    },
    {
      "src": "/favicon.ico",
      "dest": "/public/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "/public/manifest.json"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*).(ico|png|jpg|jpeg|gif|webp|svg)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/(.*).(css|js)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000"
        }
      ]
    }
  ],
  "env": {
    "REACT_APP_NAME": "UniOS",
    "REACT_APP_VERSION": "1.0.0",
    "REACT_APP_ENVIRONMENT": "production"
  },
  "build": {
    "env": {
      "REACT_APP_SUPABASE_URL": "https://mxrwetnhbirjcjwmzzdr.supabase.co",
      "REACT_APP_SUPABASE_ANON_KEY": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Im14cndldG5oYmlyamNqd216emRyIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjE4NDk5MjMsImV4cCI6MjA3NzQyNTkyM30.XHhKod0uAlB4i4dCNeHG9EqKnNmsThHkZIIIOyMK5ps"
    }
  },
  "functions": {
    "app/**/*.func": {
      "maxDuration": 30
    }
  },
  "regions": ["iad1"],
  "public": false,
  "github": {
    "enabled": true,
    "autoAlias": true,
    "silent": true
  },
  "alias": ["unios-admin.vercel.app"],
  "redirects": [
    {
      "source": "/",
      "destination": "/",
      "permanent": false
    },
    {
      "source": "/admin",
      "destination": "/admin/dashboard",
      "permanent": true
    },
    {
      "source": "/staff",
      "destination": "/staff/dashboard", 
      "permanent": true
    },
    {
      "source": "/student",
      "destination": "/student/dashboard",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://mxrwetnhbirjcjwmzzdr.supabase.co/rest/v1/:path*"
    },
    {
      "source": "/auth/:path*",
      "destination": "https://mxrwetnhbirjcjwmzzdr.supabase.co/auth/v1/:path*"
    }
  ],
  "crons": [
    {
      "path": "/api/health-check",
      "schedule": "0 */6 * * *"
    }
  ],
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "devCommand": "npm start",
  "framework": "create-react-app"
}
